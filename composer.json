{
    "name": "vikkio88/slime-api",
    "description": "a simple RestFul API framework based on Slim v3",
    "keywords": ["slime-backend", "vikkio88", "rest", "eloquent", "microservice"],
    "license": "MIT",
    "type": "project",
    "require": {
        "slim/slim": "^3.0",
        "illuminate/database": "*",
        "vlucas/phpdotenv": "^2.3"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~4.0",
        "hot/phpunit-runner": "dev-master"
    },
    "autoload": {
        "files": [ "config/database.php" ],
        "psr-4": {
            "App\\Lib\\": "Lib/",
            "App\\Models\\": "Models/",
            "App\\Actions\\": "Actions/",
            "App\\Console\\": "Console/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/",
            "Tests\\Helpers\\": "tests/Helpers"
        }
    }
}
